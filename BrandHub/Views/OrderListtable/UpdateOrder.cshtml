@model BrandHub.Map.Models.OrderDetail;

@section Scripts{
    <link href="~/css/selectpallet.css" rel="stylesheet" />
    <link href="~/css/errorpop.css" rel="stylesheet" />

    <script>
        var pallet = @Html.Raw(Json.Serialize(Model.truePallet));

        $("#Continue").click(function () {
            var radioValue = $("input[name='flexRadioDefault']:checked").val();
            var flag = false;
            var refNo = @Html.Raw(Json.Serialize(Model.OrderRef));
            $.each(pallet, function (index, value) {
                if (value == radioValue) {
                    window.location.href = "/OrderListtable/PlatteCondition?refNo=" + refNo;
                    return false;
                }
                else {
                    $('.alert').addClass("show");
                    $('.alert').removeClass("hide");
                    $('.alert').addClass("showAlert");
                    setTimeout(function () {
                        $('.alert').removeClass("show");
                        $('.alert').addClass("hide");
                    }, 5000);
                }
            })
        });
    </script>

}
<div class="container">
    <div class="alert hide">
        <span class="fas fa-exclamation-circle" style="color: #fe7171;font-size:30px"> </span>
        <span class="msg">Error: please  Select valid Pallett !</span>
        <div class="close-btn">
            <span Sty class="fas fa-times"></span>
        </div>
    </div>
    <div class="row">
        <div class="bh-main-container-dev-p col-md-12 col-sm-12 col-lg-12">
            <p class="bh-main-container-p">Select the pallet type needed for the order for @ViewBag.customerName</p>
        </div>
        <div class="pallet-main-squere-dev col-md-12 col-sm-12 col-lg-12 d-inline-flex ">

            <div class=" pallet-main-squre col-md-3">
                <div class="form-check" id="Pallet-Checkbox">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" value="fourWayEntryPalletUK" checked>
                </div>
                <div><img src="~/Images/pallet1.png" alt="Girl in a jacket" width="200px" height="200px"></div>
                <div><p>Four way entry pallet<br /><span style="color:darkblue">UK</span></p></div>
            </div>




            <div class="pallet-main-squre col-md-3">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" value="fourWayEntryPalletEU" checked>
                </div>
                <div><img src="~/Images/pallet2.png" alt="Girl in a jacket" width="200px" height="200px"></div>
                <div><p class>Four way entry pallet<br /><span style="color:darkblue">EU</span></p></div>
            </div>




            <div class="pallet-main-squre col-md-3">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" value="euPallet" checked>
                </div>
                <div><img src="~/Images/pallet3.png" alt="Girl in a jacket" width="200px" height="200px"></div>
                <p>EURO Pallet</p>
            </div>



            <div class="pallet-main-squre col-md-3">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" value="chepPallet" checked>
                </div>
                <div><img src="~/Images/pallet4.png" alt="Girl in a jacket" width="200px" height="200px"></div>
                <p>CHEP Palle</p>
            </div>


        </div>

        <div class="col-md-12 col-sm-12 col-lg-12 bh-continue-button-dev">
            <button type="button" id="Continue" class="btn btn-light bh-continue-button">Continue <i class="fa-solid fa-circle-arrow-right"></i></button>

        </div>



    </div>
</div>

